<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="macaroni_dev.OtpVerificationPage">

    <VerticalStackLayout Padding="20">
        <Label Text="Enter the code sent to your email" FontSize="20" HorizontalOptions="Center"/>
        
        <Entry x:Name="OtpEntry" Placeholder="Enter OTP" Keyboard="Numeric" />
        
        <Button Text="Verify" Clicked="OnVerifyClicked" />
        <Label x:Name="StatusLabel" Text="" TextColor="Red" />
    </VerticalStackLayout>

</ContentPage>
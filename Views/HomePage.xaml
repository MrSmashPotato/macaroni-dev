             Shell.TitleColor="White"
             Shell.BackgroundColor="MediumAquamarine"
             x:Class="macaroni_dev.Views.HomePage">
    <ContentPage.Content>
        <VerticalStackLayout Padding="20">
            <Label Text="Welcome to Home Page!" FontSize="24" HorizontalOptions="Center" />

<?xml version="1.0" encoding="utf-8"?>

<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
             BackgroundColor="Transparent"
             CloseWhenBackgroundIsClicked="False"
             x:Class="macaroni_dev.Views.LoadingPopup.ProcessingPopup">
    <Border HeightRequest="400" WidthRequest="400" Padding="20" BackgroundColor="White" 
             VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="20,20,20,20"/>
        </Border.StrokeShape>
        <!-- Image for loading GIF -->
        <Grid RowDefinitions="*, Auto">
            <Image Grid.Row="0" Source="loading.gif" HorizontalOptions="Center" VerticalOptions="Center" />
            <Label
                Grid.Row="1"
                x:Name="LoadingLabel"
                Text="Loading" FontSize="40" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center"/>
        </Grid>
    </Border>
</mopups:PopupPage>
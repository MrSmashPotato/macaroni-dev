<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="macaroni_dev.MainPage">

    <VerticalStackLayout Padding="20">
        <Label Text="Supabase Authentication" FontSize="24" HorizontalOptions="Center" />
    
        <Entry x:Name="EmailEntry" Placeholder="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />

        <Button Text="Sign Up" Clicked="OnSignUpClicked" />
        <Button Text="Sign In" Clicked="OnSignInClicked" />
        <Button Text="Sign Out" Clicked="OnSignOutClicked" />
        <Label x:Name="StatusLabel" Text="" TextColor="Red" />
    </VerticalStackLayout>

</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:macaroni_dev.ViewModels"
             xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
             x:Class="macaroni_dev.Views.CompleteRegistrationMopup"
             Title="Complete Registration">
    <ContentPage.BindingContext>
        <vm:CompleteRegistrationViewModel />
    </ContentPage.BindingContext>
    <Border HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="350" HeightRequest="700" BackgroundColor="Aquamarine">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="40,0,0,40"/>
        </Border.StrokeShape>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="15">
                <Label Text="Complete Your Registration" 
                       FontSize="24" 
                       HorizontalOptions="Center" />
            
                <!-- Profile Image with Preview -->
                <StackLayout HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
                    <Border WidthRequest="200" HeightRequest="200" StrokeThickness="10">
                        <Border.StrokeShape>
                            <Ellipse/>
                        </Border.StrokeShape>
                        <Image Source="{Binding ProfileImage}" 
                               Aspect="AspectFill" 
                               BackgroundColor="LightGray"/>
                    </Border>
                    <Button Text="Add Photo" 
                            Command="{Binding AddPhotoCommand}" 
                            BackgroundColor="#007AFF" 
                            TextColor="White" 
                            WidthRequest="120" 
                            HeightRequest="40" 
                            HorizontalOptions="Center" />
                </StackLayout>

                <!-- First Name -->
                <Label Text="First Name" />
                <Entry Text="{Binding FirstName}" Placeholder="Enter your first name" />

                <!-- Middle Name -->
                <Label Text="Middle Name" />
                <Entry Text="{Binding MiddleName}" Placeholder="Enter your middle name" />

                <!-- Last Name -->
                <Label Text="Last Name" />
                <Entry Text="{Binding LastName}" Placeholder="Enter your last name" />

                <!-- Submit Button -->
                <Button Text="Submit" 
                        Command="{Binding SubmitCommand}" 
                        BackgroundColor="#007AFF" 
                        TextColor="White" />
            </VerticalStackLayout>
        </ScrollView>
    </Border>
   
</mopups:PopupPage>

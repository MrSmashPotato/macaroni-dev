<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:vm="clr-namespace:macaroni_dev.ViewModels"
             x:Class="macaroni_dev.Views.Profile.JobPost"
             Title="JobPost">
    <ContentPage.BindingContext>
        <vm:JobPostViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="Post a Job" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

            <!-- Job Title -->
            <Entry Placeholder="Job Title" Text="{Binding JobTitle}" />
            <Label Text="{Binding JobTitleError}" TextColor="Red" IsVisible="{Binding JobTitleError, Converter={StaticResource StringToVisibilityConverter}}" />

            <!-- Job Description -->
            <Editor Placeholder="Job Description" Text="{Binding JobDetail}" HeightRequest="100" />
            <Label Text="{Binding JobDetailError}" TextColor="Red" IsVisible="{Binding JobDetailError, Converter={StaticResource StringToVisibilityConverter}}" />

            <!-- Location -->
            <Entry Placeholder="Location" Text="{Binding Location}" />
            <Label Text="{Binding LocationError}" TextColor="Red" IsVisible="{Binding LocationError, Converter={StaticResource StringToVisibilityConverter}}" />

            <!-- Salary -->
            <Entry Placeholder="Salary" Text="{Binding Salary, Converter={StaticResource DecimalConverter}}" Keyboard="Numeric" />
            <Label Text="{Binding SalaryError}" TextColor="Red" IsVisible="{Binding SalaryError, Converter={StaticResource StringToVisibilityConverter}}" />

            <!-- Skill -->
            <Label Text="Select a Skill" FontSize="16" />
            <Entry Placeholder="Type a skill..." Text="{Binding SearchText}" />
            <CollectionView ItemsSource="{Binding FilteredSkills}" SelectionMode="Single" 
                IsVisible="{Binding IsSuggestionsVisible}" 
                SelectedItem="{Binding SelectedSkill}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding SkillName}" Padding="10" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Label Text="{Binding SkillError}" TextColor="Red" IsVisible="{Binding SkillError, Converter={StaticResource StringToVisibilityConverter}}" />

            <Button Text="Submit" BackgroundColor="#007AFF" TextColor="White" Command="{Binding SubmitCommand}" />
        </StackLayout>
    </ScrollView>
</ContentPage>
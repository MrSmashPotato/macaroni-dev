<?xml version="1.0" encoding="utf-8"?>

<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
             xmlns:acrylicView="clr-namespace:Xe.AcrylicView;assembly=Xe.AcrylicView"
             xmlns:vm="clr-namespace:macaroni_dev.ViewModels"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             xmlns:m="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
             BackgroundColor="Transparent"

             x:Class="macaroni_dev.Views.Popup.EditJobApplicationPopup">
    
    <Grid>
      
        <acrylicView:AcrylicView
            EffectStyle="Dark"
            HorizontalOptions="Fill"
            IsVisible="True"
            Margin="0"
            TintOpacity=".15 "
            VerticalOptions="Fill"
        />
        <Border HeightRequest="500" WidthRequest="400" Padding="20" BackgroundColor="White" 
                VerticalOptions="Center" HorizontalOptions="Center">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20,20,20,20"/>
            </Border.StrokeShape>
            <Grid>
                <Label Text="Edit Job Application" FontAttributes="Bold" FontSize="15" HorizontalOptions="Center"/>
                <material:TextField
                    x:DataType="vm:EditJobApplicationViewModel"
                    VerticalOptions="Center"
                    Title="Status"
                    Text="{Binding Status}"
                    AllowClear="True"
                    Icon="{FontImageSource FontFamily=MaterialRegular, Glyph={x:Static m:MaterialRounded.Change_circle}}">
                    <material:TextField.Attachments>
                        <Button
                            StyleClass="TextButton"
                            Command="{Binding ClearStatusCommand}"
                        >
                            <Button.ImageSource>
                                <FontImageSource
                                    Color=" Black"
                                    FontFamily="MaterialSharp"
                                    Glyph="{x:Static m:MaterialRounded.Close}"
                                    Size="30" />
                            </Button.ImageSource>
                        </Button>
                    </material:TextField.Attachments>
                </material:TextField>
                <HorizontalStackLayout VerticalOptions="End" HorizontalOptions="Fill" Spacing="10">
                    <Button x:DataType="vm:EditJobApplicationViewModel" Command="{Binding RejectCommand}" Text="Reject" WidthRequest="170" StyleClass="FilledButton"/>
                    <Button x:DataType="vm:EditJobApplicationViewModel" Command="{Binding UpdateCommand}" Text="Update" WidthRequest="170" StyleClass="FilledButton"/>

                </HorizontalStackLayout>
            </Grid>
            
        
        </Border>
    </Grid>
   
</mopups:PopupPage>